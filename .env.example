# PostgreSQL
POSTGRES_URL=postgres://postgres:yourpassword@localhost:5432/auth?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=your-super-secret-key

# SMTP for sending email
SMTP_EMAIL=your.email@gmail.com
SMTP_PASSWORD=your_app_password

# Host and CORS
HOST=localhost:8080
CORS_ORIGINS=http://localhost:3000

# Token lifetimes (Go duration, e.g. 15m, 24h)
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=360h   # 15 days
RESET_TOKEN_TTL=5m